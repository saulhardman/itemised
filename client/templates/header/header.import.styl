.header
    size = 64
    display(flex)
    position: fixed
    top: 0
    left: 0
    z-index: 4
    width: 100%
    height: size * 1px
    color: colour('white')
    background: colour('black')

    &:empty
        display: none

    &__button
        padding: 16px
        width: size * 1px
        height: size * 1px
        background: none
        border: 0

    &__icon
        width: 100%
        height: 100%

    &__title
        flex-grow(1)
        font-scale('header', '1')
        max-width: "calc(100% - %s)" % (size * 2px)
        line-height: rem(size)
        letter-spacing: rem(.1)
        text-align: center

    &__count
        font-group('body')
        font-size: rem(10)
        color: colour('grey')

        &:before
            content: '('

        &:after
            content: ')'
