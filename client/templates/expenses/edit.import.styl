.expense-edit
    
    &__tags
        float: right
        margin: -15px 0 0
        padding: 0 10px 10px 15px
        width: (2 / 3) * 100%
        line-height: rem(64)
        border-left: 1px solid colour('grey', 'light')
        transform: translateX(-1px)
        overflow-x: scroll
        overflow-scroll: touch
        -webkit-overflow-scroll: touch
        white-space: nowrap
        
    &__tag
        display: inline-block

.expense-edit-form

    &__field
        @extend .group
        height: 64px
        line-height: rem(64)
        
    &__label,
    &__input
        float: left
        padding: 0 15px
        height: 100%
        
    &__label
        width: (1 / 3) * 100%
        text-align: right
        border-right: 1px solid colour('grey', 'light')

    &__input
        width: (2 / 3) * 100%
        line-height: inherit

    &__button
        width: 100%;
