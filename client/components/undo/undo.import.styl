.undo
    position: fixed
    top: 0
    left: 0
    z-index: 4
    visibility: hidden
    width: 100%
    height: 100%
    background-color: rgba(20, 20, 20, 0)
    transition: background-color .8s, visibility 0 linear .8s
    
    &--is-open
        visibility: visible
        background-color: rgba(20, 20, 20, .6)
        transition: background-color .8s
    
    &__menu
        text-align: center
        background: colour('black')
        transform: translateY(-100%)
        transition: transform .8s
        
    &--is-open__menu
        transform: none
        transition: transform .8s
