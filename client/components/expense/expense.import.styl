.expense
    overflow: hidden
    padding: 0
    background: colour('grey', 'light')
    transition: padding .2s ease-out .2s
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
    -webkit-tap-highlight-color: transparent

    &--is-open
        padding: 6px
        transition: padding .2s ease-in

        & + &
            padding-top: 0
            
    &--is-animating
        pointer-events: none
            
    &__container
        position: relative

    &__icon
        size = 36px
        position: absolute
        z-index: 1
        top: 50%
        display: block
        margin: -(size / 2) 0 0
        width: size
        height: size
        fill: colour('grey')

        &--right
            right: 16px
            
        &--left
            left: 16px
            
        &--is-active
            fill: colour('black')
            
    &__button
        float: left
        margin: 4px 0 0
        width: 50%
        border: 0
            
    &__date-icon,
    &__location-icon
        float: left
        
    &__date-icon
        margin: 5px 5px 0 -1px
        width: 14px
        height: 14px
        
    &__location-icon
        margin: 4px 4px 0 -2px
        width: 16px
        height: 16px

    &__content
        position: relative
        z-index: 2
        
        &--is-reset
            transition: transform .4s

    &__details
        display(flex)
        flex-flow(row nowrap)
        align-items(baseline)
        padding: 16px 0
        width: 100%
        background: none
        border: 0
        cursor: pointer

    &__content,
    &__note,
    &__amount
        background: colour('white')

    &__details,
    &__location,
    &__date
        padding-right: 16px
        padding-left: 16px

    &__note
        padding: 0 8px 0 0
        max-width: (2/3) * 100%
        white-space: no-wrap
        text-overflow: ellipsis
        overflow: hidden
        
    &__separator
        flex-grow(1)
        border-bottom: 1px dotted colour('grey', 'light')

    &__amount
        padding: 0 0 0 8px

    &__location,
    &__date
        display: block
        width: 100%
        color: colour('grey')
        font-size: rem(12)
        line-height: rem(24)
        
    &__date
        padding-bottom: 6px

    &__tags-container
        position: relative

        &:after
            content: ''
            position: absolute
            top: 1px
            right: 0
            width: 36px
            height: calc(100% - 2px)
            background: linear-gradient(right, colour('white') 25%, rgba(255, 255, 255, 0))
            pointer-events: none

    &__tags
        padding: 10px 16px 6px
        border: 1px dashed colour('grey', 'light')
        border-left: 0
        border-right: 0
        border-bottom: 0
        overflow-x: scroll
        overflow-scroll: touch
        -webkit-overflow-scroll: touch
        white-space: nowrap
        
    &__tag
        display: inline-block

    &__additional-information
        overflow: hidden
        background: colour('white')
        
        &--is-hidden
            position: absolute
            visibility: hidden
            
    &__additional-information-item
        overflow: hidden
