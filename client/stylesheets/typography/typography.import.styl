@require 'typography.config.import'
@require 'typography.helpers.import'
@require 'typography.mixins.import'

html
    font-size: 16px

body,
button,
input,
select,
textarea
    font('body', '2')
    color: colour('black')
    font-weight: font-weight('regular')

h1,
h2,
h3,
h4
    font-weight: font-weight('semi-bold')

h1
    font('header', '4')

h2
    font('header', '3')

h3
    font('header', '2')

h4
    font('header', '1')
